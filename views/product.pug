include head.pug
include header-dark.pug
main(class='product-page')
    div(class='container')
        section(class='row')
            div( class='col-md-8 px-4 py-2')
                img( src=`${product.image}` class='d-block product-img__bike w-100' alt='bike')
            div(class='col-md-4 product-info')
                h2(class='small-title product-info__elem') #{product.name}
                h3(class='smaller-title price product-info__elem') #{product.cost}$
                p(class='large-text product-info__elem')
                    |#[b Color:]  #[span(class="available-color rounded-circle" style="background-color: #{product.color};")] #[br]
                    |#[b Frame:] #{product.frame} #[br]
                    |#[b Growth:] #{product.growth} #[br]
                    |#[b Wheel:] #{product.wheel} #[br]
                button(class='btn-black product-info__elem mt-4' id='addToCartBtn' data-product-id = product.id) Добавить в корзину
                a(class='btn-black product-info__elem mt-2' href='/order' id='orderAProduct') ЗАКАЗАТЬ
        section(class='row')
            div(class='col-md-6')
                h3(class='smaller-title') Description
                p(class='text') #{product.description}
include footer.pug
include scripts.pug