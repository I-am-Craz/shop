include head.pug
include header-dark.pug
main(class="mt-5 mb-5")
    div(class="container")
        section(class="row")
            div( class="col-md-9 product-img")
                img( src=`${product.image}` class="d-block product-img__bike " alt="bike")
            div(class="col-md-3 product-info")
                h2(class="subtitle product-info__elem") #{product.name}
                p(class="p text price product-info__elem") #{product.cost}
                p(class="text product-info__elem")
                |#[b Color:]  #[span(class="available-color rounded-circle" style="background-color: #{product.color};")] #[br]
                |#[b Frame:] #{product.frame} #[br]
                |#[b Growth:] #{product.growth} #[br]
                |#[b Wheel:] #{product.wheel} #[br]
                button(class="btn product-info__elem text mt-4") Добавить в корзину
                a(class="btn product-info__elem text mt-2" href="/cartCheckout") ЗАКАЗАТЬ
        section(class="row")
            div(class="col-md-6")
                h3(class="subtitle") Описание
                p(class="text") #{product.description}

include footer.pug
include scripts.pug