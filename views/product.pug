include head.pug
include header-dark.pug
main(class='product-page')
    div(class='container')
        section(class='row')
            div( class='col-md-8 px-4 py-2 carousel carousel-dark slide product-images-carousel' id='product-images' data-bs-ride='carousel')
            div(class='col-md-4 product-info')
                h2(class='small-title product-info__elem') #{product.name}
                h3(class='smaller-title price product-info__elem') #{product.cost}$
                ul(class='large-text product-info__elem')
                    li
                        p(id='product-color-name')
                        ul(class='d-flex mb-4' id='colors-list')
                            each item, index in product.images
                                if(index === 0)
                                    li(style={background: `${item.color}`} class='product-info__elem-color product-info__elem-color_selected')
                                else
                                    li(style={background: `${item.color}`} class='product-info__elem-color')
                    li #[b Frame:] #{product.frame} (Growth #{product.growth}) #[br]
                    li #[b Wheel:] #{product.wheel} #[br]
                button(class='btn-black product-info__elem mt-4' id='addToCartBtn' data-product-id = product.id) Добавить в корзину
                a(class='btn-black product-info__elem mt-2 border border-2 border-dark' href='/order' id='orderAProduct') ЗАКАЗАТЬ
        section(class='row')
            div(class='col-md-6')
                h3(class='smaller-title') Description
                p(class='text') #{product.description}
include footer.pug
