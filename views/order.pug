include head.pug
include header-dark.pug
main(class='mt-6')
    div(class='container')
        div(class='row')
            h1(class='title mt-5 mb-2 d-flex justify-content-center') #{__('ordering')}
            div(class='col-sm-12 col-md-6 p-4')
                div(class='row' id='cartOnOrderPage')
                div(  class='row text-center justify-content-center')
                    button( class='btn-black w-75 mt-2 rounded-0' onclick='window.location.href = \'/categories\';') #{__('continue shopping')}
            form(class='col-sm-12 col-md-6 d-flex flex-column align-items-center' name='form')
                div(class='row')
                    h3(class='smaller-title mt-4') #{__('contact info')}
                    div(class='row mb-2')
                        div(class='col-md-6 mt-3')
                            label(for='firstname' class='w-100') #{__('name')}
                                input(id='firstname'  name='firstname' type='text' class='w-100' pattern='[A-Za-zА-Яа-яЁё]{1,}' placeholder='John' required='required')
                            label(for='phone' class='w-100') #{__('phone')}
                                input(id='phone' name='phone' type='tel' class='w-100' pattern='[+][0-9]{2,3}-[0-9]{3}-[0-9]{3}-[0-9]{3}' placeholder='+996-123-456-789' required='required')
                        div(class='col-md-6 mt-3')
                            label(for='lastname' class='w-100') #{__('last name')}
                                input(id='lastname' name='lastname' type='text' class='w-100' pattern='[A-Za-zА-Яа-яЁё]{1,}' placeholder='Doe' required='required')
                            label(for='email' class='w-100') #{__('email')}
                                input(id='email' name='email' type='email' class='w-100' pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,4}$' placeholder=`${__('email')}` required='required')
                div(class='row  mt-1')
                    h3(class='smaller-title') #{__('payment and delivery')}
                    div(class='row')
                        div(class='col-md-6 mt-3')
                            label(for='payment' class='w-100') #{__('payment')}
                                select( id='payment' name='payment' class='w-100' required='required' )
                                    option(selected)
                                    option(value=`${__('cash payment')}`) #{__('cash payment')}
                                    option(value=`${__('electronic payment systems')}`) #{__('electronic payment systems')} 
                            label(for='city' class='w-100') #{__('city')}
                                input( id='city' name='city' type='text' class='w-100' pattern='[A-Za-zА-Яа-яЁё]{1,}' placeholder='Tucson' required='required')
                        div(class='col-md-6 mt-3')
                            label(for='delivery' class='w-100') #{__('delivery')} #[br]
                                select(id='delivery' name='delivery' class='w-100' required='required')
                                    option(selected)
                                    option(value=`${__('courier delivery')}`) #{__('courier delivery')} 
                            label(for='address' class='w-100') #{__('delivery address')}
                                input( id='address' name='address' type='text' class='w-100' pattern='[A-Za-zА-Яа-яЁё]{10,}' placeholder=`${__('address')}` required='required')
                input(type='submit' value=`${__('place an order')}` class='btn-black rounded-0 mt-4 mb-1 p-1' id='orderBtn')
include scripts.pug
