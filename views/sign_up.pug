include head.pug
main
    section(class='row p-3 g-0 registr-page-block')
        div(class='signup-form')
            form(name='signup')
                h2 #{__('sign up')}
                p(class='hint-text') #{__('create an account')}
                div(class='form-group')
                    input(type='text' class="form-control" name='first_name' placeholder=`${__('name')}` required='required')
                div(class='form-group')
                    input(type='text' class='form-control' name='last_name' placeholder=`${__('last name')}` required='required')
                div(class='form-group')
                    input( type='email' class='form-control' name='email' placeholder=`${__('email')}` required='required')
                div( class='form-group')
                    input(type='tel' class='form-control' name='phone'  required='required' pattern='[+][0-9]{2,3}-[0-9]{3}-[0-9]{3}-[0-9]{3}' placeholder=`${__('phone')}`)
                div(class='form-group')
                    input(type='password' class='form-control' name='password' placeholder=`${__('password')}` required='required')
                div(class='form-group')
                    button(type='submit' class='btn btn-black rounded-0 border border-2 border-dark' id='signupFormBtn') #{__('sign up')}
                div(class='text-center') #{__('already have an account')}
                    a(href='/log_in') #{__('log in')}
include scripts.pug